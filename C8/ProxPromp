-- Script inside the part or mesh that has the ProximityPrompt

local prompt = script.Parent:WaitForChild("ProximityPrompt")

prompt.Triggered:Connect(function(player)
	local stats = player:FindFirstChild("leaderstats")
	if not stats then return end

	local crystals = stats:FindFirstChild("Crystals")
	if not crystals then return end

	-- Add 1 crystal
	crystals.Value += 1

	-- Check if player reached 5
	if crystals.Value == 5 then
		print(player.Name .. " completes the game!")
	end

	-- Destroy the object (parent of this script)
	script.Parent:Destroy()
end)
